<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="at.tuwien.ims.mobilebrdf.tracker"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="at.tuwien.ims.mobilebrdf.tracker.OrientationTrackerActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service android:name="at.tuwien.ims.mobilebrdf.tracker.OrientationTrackerService_Simple" android:exported="false" />
        <service android:name="at.tuwien.ims.mobilebrdf.tracker.OrientationTrackerService_Complementary" android:exported="false" />       
    </application>

</manifest>
